{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": ["RESEND_API_KEY"],
  "globalDependencies": [".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "passThroughEnv": ["RESEND_API_KEY"],
      "persistent": true
    }
  }
}
