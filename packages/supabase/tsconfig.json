{
  "extends": "@yz13/typescript-config/react-library.json",
  "display": "Default",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "strict": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "ES2020",
    "types": [
      "@types/node",
      "@types/react",
      "@types/react-dom",
      "@types/jest",
      "jest"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src"
  ]
}
